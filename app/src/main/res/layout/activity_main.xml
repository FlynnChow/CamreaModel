<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机Model"
        android:textSize="40dp"
        android:id="@+id/startText"
        android:layout_centerHorizontal="true"
        android:textColor="#8a24ac"/>
    <Button
        android:id = "@+id/open_camera_activity"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开相机"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_below="@id/startText"
        android:layout_centerHorizontal="true"
        android:background="#96bf1322"/>
    <ImageView
        android:id="@+id/show_bitmap"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/open_camera_activity"/>

</RelativeLayout>