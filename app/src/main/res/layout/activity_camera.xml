<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".CameraActivity">
    <com.example.camreamodel.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include layout="@layout/oval_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_1"
        android:layout_centerInParent="true"
        />
    <include layout="@layout/oval_layout"
        android:layout_centerInParent="true"
        android:layout_above="@id/view_1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_2"
        />
    <include layout="@layout/bubble_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#00000000"
            android:id="@+id/camera_top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/back_g"/>
            <ImageView
                android:id="@+id/light"
                android:layout_centerInParent="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/light_close"/>

            <ImageView
                android:id="@+id/camera_setting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:src="@mipmap/setting_0" />
        </RelativeLayout>
        <LinearLayout
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:background="@drawable/shape_cornet"
                    android:layout_width="0dp"
                    android:layout_weight="18"
                    android:layout_height="match_parent"
                    android:id="@+id/camera_crop"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">
            <ImageView
                android:background="@drawable/button_ripple"
                android:id="@+id/camera_discern"
                android:layout_centerInParent="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/eye_open"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>