<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".CameraActivity">
    <com.example.camreamodel.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/camera_top_view"
            android:background="#32000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_alignParentLeft="true"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"/>
            <ImageView
                android:id="@+id/light"
                android:layout_centerInParent="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/lightg_close"/>
            <ImageView
                android:id="@+id/camera_setting"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:background="#32000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@mipmap/camera_crop"
                    android:layout_width="0dp"
                    android:layout_weight="18"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/camera_crop"/>
                <View
                    android:background="#32000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:background="#32000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">
            <ImageView
                android:background="@drawable/button_ripple"
                android:id="@+id/camera_discern"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/camera_discern"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>