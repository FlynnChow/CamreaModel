<?xml version="1.0" encoding="utf-8"?>
<com.example.camreamodel.BubbleLayout android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:background_color="#af66bb6a"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:offset="-40dp"
    app:radius="8dp"
    app:shadow_color="#000000"
    app:showTriangle="0dp"
    app:shadow_size="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/oval_image"
            android:scaleType="fitXY"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/light_open"/>
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/oval_1"
                android:textColor="#efebe9"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="名称: 气泡对话框"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/oval_2"
                android:textSize="12dp"
                android:textColor="#efebe9"
                android:layout_weight="1"
                android:text="概率: 99%"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/oval_3"
                android:textColor="#efebe9"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="简介: 气泡对话框测试"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>
</com.example.camreamodel.BubbleLayout>